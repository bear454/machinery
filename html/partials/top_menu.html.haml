.container-fluid
  #description-selector-bar
    .row
      .col-lg-6.col-md-6.text-center
        .description-selector-overlay
        .btn-group
          %button.description-selector.btn.btn-default.machinery-dropdown.selects
            .description-selector-header
              System
            .description-selector-name
              - if @description && @description.name
                = @description.name
              - elsif @description_a && @description_a.name
                = @description_a.name
              - else
                .italic
                  No description selected
            %span.description-selector-icon.glyphicon.glyphicon-chevron-down
      .col-lg-6.col-md-6.text-center
        .btn-group
          - compare_disabled = {}
          - if !@description && !@description_a
            - compare_disabled = { disabled: "disabled" }
          %button.description-selector.btn.btn-default.machinery-dropdown.compares{ compare_disabled }
            .description-selector-header
              System
            .description-selector-name
              - if @description_b && @description_b.name
                = @description_b.name
              - else
                .italic
                  Click to compare
            %span.description-selector-icon.glyphicon.glyphicon-chevron-down
            - compare = { disabled: "disabled", title: "Close this description"}
            - if @description_b
              - compare = {title: "Close this description"}
            %button.close-comparison.btn.btn-default{ compare }
              .close-comparison-icon
                %span.glyphicon.glyphicon-remove-circle
      .description-selector-content.scrollable-menu
        = render_partial "landing_page"
